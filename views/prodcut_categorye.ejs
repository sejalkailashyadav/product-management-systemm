<!-- products.ejs -->
<!DOCTYPE html>
<html>

<head>
    <title>User Panel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .card {
            margin-bottom: 20px;
        }

        .card-img {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <%- include("user_Panel") -%>

    <div class="container">
        <div class="row">
            <% products.forEach(function(product) { %>
            <div class="col-md-4">
                <div class="card">
                    <img src="/a.jpeg" alt="Product Image" height="40%" width="80%">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.product_name %></h5>
                        <p class="card-text">Category: <%= product.category[0].category_name %></p>
                        <p class="card-text">Price: $<%= product.product_price %></p>
                        <p class="card-text"><%= product.product_description %></p>
                        <button class="btn btn-primary">Order</button>
                        <button class="btn btn-success" data-toggle="modal" data-target="#cartModal"
                            data-product-id="<%= product.id %>">Add to Cart</button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <!-- Add Cart Modal -->
    <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cartModalLabel">Add to Cart</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/cart/add" method="POST">
                        <input type="hidden" id="productId" name="productId">
                        <div class="form-group">
                            <label for="quantity">Quantity</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1">
                        </div>
                        <button type="submit" class="btn btn-success">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        // Update product ID in the modal when "Add to Cart" button is clicked
        $(document).ready(function () {
            $('.btn-success').on('click', function () {
                var productId = $(this).data('product-id');
                $('#productId').val(productId);
            });
        });
    </script>
</body>

</html>
